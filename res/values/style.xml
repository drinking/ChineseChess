<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowTitleStyle">@style/TitleStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonStyle3">
        <item name="android:background">@drawable/button_dialog</item>
        <item name="android:height">30dp</item>
    </style>

</resources>